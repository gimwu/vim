" vim 的基本配置
set nocompatible
filetype off
set backspace=indent,eol,start
set nu
set showcmd
set spell
syntax on
set nowrap
set laststatus=2
set  ruler
set showmatch

set mouse=a

set encoding=utf-8

filetype indent on

set hlsearch

set incsearch
set ignorecase

set tabstop=4
set shiftwidth=4
set autoindent
set softtabstop=4

set autowrite
set ignorecase


